<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../views/partials/head') %>
<body>
	<!-- Header -->
<%- include('../views/partials/header') %>

	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<!-- Show the "ultimos" products -->

			<form class="container-form-register" action="" method="POST">
				<h2 class="titulo">Crea tu cuenta aquí</h2>
				<p>
					
					<input type="text" name="nombre" id="nombre" class="nombre"placeholder="nombre completo"> 
				</p>
				<p>
					
					<input type="email" name="mail" id="mail" class="email"placeholder="EMAIL" required> 
				</p>
				<p>
					
					<input type="date" name="fechanac" id="fechanac" class="fecha" placeholder="Fecha de nacimiento" > 
				</p>
				<p>
					
					<input type="password" name="contraseña" id="contraseña" class="pwd" pattern=".{6,}" placeholder="Contraseña" required> 
				</p>
				<p class="checkbox">
                    <input type="checkbox" name="acepto"  required> He leído y acepto los términos y condiciones de uso 
                </p> 
				<br/>
				<br/>
				<p><input class="submit" type="submit" value="ENVIAR"></p>	
				
			</form>


	<!-- footer -->
<%- include('../views/partials/footer') %>
<!-- /footer -->
</body>

</html>