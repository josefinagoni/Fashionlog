<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../views/partials/head') %>
<body class="add-product-background">
	<!-- Header -->
	<% if(!logueado) { %>
		<%- include('../views/partials/header') %>
		<% } else { %>
		<%- include('../views/partials/headerlog') %>	
		<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">EDITA TU PRODUCTO </h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="container-add">
			<form class="container-form-edit" action="/index/edit-product" method="POST" enctype='multipart/form-data' >
				<input type="file" name="productoAgregado">	
				<h2 class="titulo">EDITA TU PRODUCTO: <%= producto.nombre %></h2>
				<% if(locals.errors) {%>
					<p style="color:red">
						<%= errors.message %> 
					</p>
				  <% } %> 

				<p>
					
					<input type="text" name="nombre" id="nombre" class="nombre"placeholder="nombre del producto"> 
				</p>
				<p>
					
					<input type="text" name="descripcion" id="descripcion" class="descripcion" placeholder="DescripciÃ³n"> 
				</p>
				
				<p>
					
					<input type="file" name="imagen" id="image" class="image"  placeholder="foto del producto" > 
				</p>
				<p>
					
					<input type="hidden" name="id" id="nombre" class="nombre" placeholder="nombre del producto" value="<%= producto.id %>"> 
				</p>
				
				<br/>
				<br/>
                <p><input class="submit" type="submit" value="Crear Producto"></p>	
                
				
			</form>
		</div>

<!-- footer -->
<%- include('../views/partials/footer') %>
<!-- /footer -->

</body>

</html>