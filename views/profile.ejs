<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../views/partials/head') %>

<body>
	<!-- Header -->
	<% if(!logueado) { %>
	<%- include('../views/partials/header') %>
	<% } else { %>
	<%- include('../views/partials/headerlog') %>
	<% } %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/<%= usuario.imagen %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				
				<div class="d-flex align-items-center ">
					
						<h1 class="main-title" style="text-transform: capitalize;"> <%=usuario.nombre%> 
				<% if (logueado &&  miUsuario.id == usuario.id) { %>
					<a href="/index/edit-profile/<%= usuario.id %>"> 
						<i class="fas fa-cog"> Editar mi Perfil</i>
					</a>
						</h1>
					
					<% } %>
					
				</div>
				<div>
					<ul class="">
						<li> <%= usuario.productos.length %> productos </li>
						<li><%= usuario.comentario.length %> comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->

			<% usuario.productos.forEach(element => { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/index/product/<%=element.id%>">
						<figure class="product-box_image">
							<img class="product-image" src="/images/products/<%= element.imagen %>" alt="">
						</figure>
						<article class="product-box_data">
							<h2><%= element.nombre %></h2>
							<p><%= element.descripcion %></p>
							<p>Comentarios: <%= element.comentario.length %> </p>
						</article>
					</a>
				</section>
			</div>
			<% })%>
		</div>
	</div>



	<!-- footer -->
	<%- include('../views/partials/footer') %>
	<!-- /footer -->

</body>

</html>