<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../views/partials/head') %>
<body>
	<!-- Header -->
<%- include('../views/partials/header') %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"> <%= producto.nombre%></h2> 
			<p class="product-detail-description"> de
				<a href="/index/profile"> <%= usuario.nombre%></a>
			</p>
			<p class="product-detail-description">
				<a href="/index/edit-product/<%= producto.id %>" class="edit">Editar</a>
			</p>
			<p class="divider">|</p>
			<p>
				<form action="/index/delete-product" method="POST">
					<input type="hidden" name="id" value="<%= producto.id %>" class="delete-input">
					<!-- <input type="submit" value="Borrar"> -->
					<button class="button"><i class="far fa-trash-alt trashcan"></i></button>
				</form>
			</p>
			
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/images/products/<%= producto.imagen%>" alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%= producto.descripcion%> </p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% comentario.forEach(element => { %>
							<article>
								<img src="/images/users/<%= element.usuario.imagen %>" alt="">
								<div class="data">
									<p class="user">
										<strong> <a href="/index/profile"> <%= element.usuario.nombre %> : </a> </strong>
										<%= element.texto %> </p>
										<p> <%= element.createdAt %> </p>
								</div>
							</article>
						<% }) %>

								
							
						

					</section>
					<form class="form" action="/index/product/:id/comentario" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario" name="comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
				</div>
					
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
<%- include('../views/partials/footer') %>
	<!-- /footer -->

</body>	
</html>