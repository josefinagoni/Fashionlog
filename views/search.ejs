<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<!-- Include Head -->
<%- include('../views/partials/head') %>
<body>
	<!-- Header -->
	<% if(!logueado) { %>
		<%- include('../views/partials/header') %>
		<% } else { %>
		<%- include('../views/partials/headerlog') %>	
		<% } %>

	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% if(error) {%>
				<span>Hubo un ERROR: <%=error%></span><br><br><br><br>
			  <% } %> 

			<% lista.forEach(element => {%> 
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/index/product/<%= element.id%>">
						<figure class="product-box_image">
							<img  src=" /images/products/<%= element.imagen %>" alt="">
						</figure>
						<article class="product-box_data">
							<h2> <%= element.nombre %> </h2>
							<p><%= element.descripcion %></p>
							<p><%= element.usuario.nombre %></p>
							<p>Comentarios: <%= element.comentario.length %> </p>

						</article>
					</a>
				</section>
			</div>
			<% })%>
        


	<!-- footer -->
<%- include('../views/partials/footer') %>
<!-- /footer -->
</body>

</html>